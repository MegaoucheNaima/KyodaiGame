<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/papillonimg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/papillonimg"
    tools:context="com.example.pc.kyodaigame.MainActivity">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btnplay"
        android:background="@drawable/btnplay"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btnscore"
        android:background="@drawable/btnscore"
        android:layout_below="@+id/btnplay"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btnabout"
        android:background="@drawable/btnabout"
        android:layout_below="@+id/btnscore"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        />
</RelativeLayout>

